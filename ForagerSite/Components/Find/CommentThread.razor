@using DataAccess.Models
@using ForagerSite.DataContainer
@using ForagerSite.Services
@using Microsoft.AspNetCore.Components
@namespace ForagerSite.Components.Find

@inject IUserFindService userFindService
@inject IMapService mapService
@inject UserSessionService session


<div id="commentSection">
    <div>
        <p>
            <span style="cursor: pointer;" @onclick="ToggleExpandComments">
                Comments
            </span>
        </p>
    </div>

    @if (expandComments)
    {
        <table>
            <tbody>
                <tr>
                    <td>
                        <div>
                            <label for="@($"comment-form-{Find.findId}")">Leave Comment</label>
                            <InputText id="@($"comment-form-{Find.findId}")"
                                       @bind-Value="userComment"
                                       placeholder="Enter Comment..."
                                       class="form-control" />
                            <button class="form-control" @onclick="SubmitRootComment">
                                Submit
                            </button>
                        </div>
                    </td>
                </tr>

                @if (Find.findsCommentXrefs != null && Find.findsCommentXrefs.Any())
                {
                    @foreach (var xref in Find.findsCommentXrefs)
                    {
                        if (!xref.findsComment.parentCommentId.HasValue)
                        {
                            <tr>
                                <td colspan="4">
                                    <div>
                                        <div style="display: flex; gap: 20px;">
                                            <div>
                                                <img src="@xref.CommentUserProfilePic"
                                                     alt="Profile Picture"
                                                     style="max-width: 50px; border-radius: 50%;" />
                                            </div>
                                            <div>
                                                <p>
                                                    <a>@GetUserName(xref.comxUserId)</a>
                                                </p>
                                            </div>
                                        </div>

                                        <div>
                                            <p>@xref.findsComment.comment</p>
                                        </div>
                                        <Vote 
                                              find=null
                                              comment="xref.findsComment"
                                              vmUserId="Find.findUserId"
                                              findOrCommentId="xref.findsComment.comId"
                                              voteType="comment" />
                                        @if (CanDeleteComment(xref.comxUserId))
                                        {
                                            <div>
                                                <button class="form-control"
                                                        @onclick="() => DeleteComment(xref.comXId)">
                                                    Delete
                                                </button>
                                            </div>
                                        }

                                        <p>
                                            <span style="cursor: pointer;"
                                                  @onclick="() => ToggleReplyExpansion(xref.findsComment.comId)">
                                                Replies
                                            </span>
                                        </p>

                                        @if (IsReplyExpanded(xref.findsComment.comId))
                                        {
                                            <div>
                                                <InputText @bind-Value="userCommentReply"
                                                           placeholder="Reply..."
                                                           class="form-control" />
                                                <button class="form-control"
                                                        @onclick="() => SubmitReply(xref.findsComment.comId)">
                                                    Reply
                                                </button>
                                            </div>

                                            @if (Find.findsCommentXrefs.Any(r =>
                                                                    r.findsComment.parentCommentId.HasValue &&
                                                                    r.findsComment.parentCommentId == xref.findsComment.comId))
                                            {
                                                <table>
                                                    <tbody>
                                                        @foreach (var reply in Find.findsCommentXrefs.Where(r =>
                                                                                        r.findsComment.parentCommentId.HasValue &&
                                                                                        r.findsComment.parentCommentId == xref.findsComment.comId))
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div>
                                                                        <div style="display: flex; gap: 20px;">
                                                                            <div>
                                                                                <img src="@reply.CommentUserProfilePic"
                                                                                     alt="Profile Picture"
                                                                                     style="max-width: 50px; border-radius: 50%;" />
                                                                            </div>
                                                                            <div>
                                                                                <p>
                                                                                    <a>@GetUserName(reply.comxUserId)</a>
                                                                                </p>
                                                                            </div>
                                                                        </div>

                                                                        <div>
                                                                            <p>@reply.findsComment.comment</p>
                                                                        </div>
                                                                        <Vote 
                                                                              find=null
                                                                              comment="reply.findsComment"
                                                                              vmUserId="Find.findUserId"
                                                                              findOrCommentId="reply.findsComment.comId"
                                                                              voteType="comment" />
                                                                        @if (CanDeleteComment(reply.comxUserId))
                                                                        {
                                                                            <div>
                                                                                <button class="form-control"
                                                                                        @onclick="() => DeleteComment(reply.comXId)">
                                                                                    Delete
                                                                                </button>
                                                                            </div>
                                                                        }
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                        }

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <tr>
                        <td>
                            <div>
                                <p>No comments</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    [Parameter] public FindDC Find { get; set; }
    [Parameter] public Guid VmId { get; set; }
    [Parameter] public Guid CurrentUserId { get; set; }
    [Parameter] public Dictionary<Guid, string> UserNames { get; set; }

    private string userComment = string.Empty;
    private string userCommentReply = string.Empty;
    private bool expandComments = false;
    private Dictionary<Guid, bool> expandedRepliesMap = new();

    #region Row Expansion
    private void ToggleExpandComments()
    {
        expandComments = !expandComments;

        if (!expandComments)
        {
            expandedRepliesMap.Clear();
        }
    }

    private void ToggleReplyExpansion(Guid commentId)
    {
        if (expandedRepliesMap.ContainsKey(commentId))
        {
            expandedRepliesMap[commentId] = !expandedRepliesMap[commentId];
        }
        else
        {
            expandedRepliesMap.Clear();
            expandedRepliesMap[commentId] = true;
        }
    }

    private bool IsReplyExpanded(Guid commentId)
    {
        return expandedRepliesMap.TryGetValue(commentId, out var expanded) && expanded;
    }
    #endregion

    private bool CanDeleteComment(Guid commentUserId)
    {
        return commentUserId == CurrentUserId || Find.findUserId == CurrentUserId;
    }
    private string GetUserName(Guid userId)
    {
        if (UserNames != null && UserNames.TryGetValue(userId, out var name))
        {
            return name;
        }

        return "Unknown User";
    }
    #region CRUD Handlers

    private async Task SubmitRootComment()
    {
        var text = userComment?.Trim();
        if (string.IsNullOrWhiteSpace(text))
            return;

        var userId = session.SessionUser.UserId;

        FindsCommentXrefDC xref;

        xref = await userFindService.AddComment(text, Find.findId, userId);

        var newViewModel = mapService.CurrentViewModels.FirstOrDefault(vm => vm.userId == VmId);
        if (newViewModel == null)
            return;

        var find = newViewModel.finds.FirstOrDefault(f => f.findId == Find.findId);
        if (find == null)
            return;

        find.findsCommentXrefs.Add(xref);
        find.findsCommentXrefs = find.findsCommentXrefs
            .OrderBy(c => c.findsComment.commentDate)
            .ToList();

        mapService.UpdateViewModels(VmId, newViewModel);

        userComment = string.Empty;
    }
    
    
    private async Task SubmitReply(Guid parentCommentId)
    {
        var text = userCommentReply?.Trim();
        if (string.IsNullOrWhiteSpace(text))
            return;

        var userId = session.SessionUser.UserId;

        FindsCommentXrefDC xref;
        xref = await userFindService.AddComment(text, Find.findId, userId, parentCommentId);

        var newViewModel = mapService.CurrentViewModels.FirstOrDefault(vm => vm.userId == VmId);
        if (newViewModel == null)
            return;

        var find = newViewModel.finds.FirstOrDefault(f => f.findId == Find.findId);
        if (find == null)
            return;

        find.findsCommentXrefs.Add(xref);
        find.findsCommentXrefs = find.findsCommentXrefs
            .OrderBy(c => c.findsComment.commentDate)
            .ToList();

        mapService.UpdateViewModels(VmId, newViewModel);

        userCommentReply = string.Empty;
    }

    private async Task DeleteComment(Guid xrefId)
    {
        await userFindService.DeleteComment(xrefId);

        var newViewModel = mapService.CurrentViewModels.FirstOrDefault(vm => vm.userId == VmId);
        if (newViewModel == null)
            return;

        var find = newViewModel.finds.FirstOrDefault(f => f.findId == Find.findId);
        if (find == null)
            return;

        var deletedCommentXref = find.findsCommentXrefs
            .FirstOrDefault(x => x.comXId == xrefId);

        if (deletedCommentXref != null)
        {
            var repliesToDelete = find.findsCommentXrefs
                .Where(x => x.findsComment.parentCommentId == deletedCommentXref.findsComment.comId)
                .ToList();

            foreach (var reply in repliesToDelete)
            {
                find.findsCommentXrefs.Remove(reply);
            }

            find.findsCommentXrefs.Remove(deletedCommentXref);
        }

        mapService.UpdateViewModels(VmId, newViewModel);
    }
    #endregion
}

